#!/usr/bin/env ruby

libdir = File.expand_path('../../lib', __FILE__).sub(/^#{Dir.pwd}\//, '')
begin 
  require 'tic_tac_toe'
rescue LoadError
  case $!.to_s
  when /tic_tac_toe/
  if !$:.include?(libdir)
      warn "warn: #$!. trying again with #{libdir} on load path"
      $:.unshift(libdir)
      retry
    end
  end
  raise
end

DefualtBoardSize = 3
board_size = ENV["SIZE"] ? ENV["SIZE"].to_i : DefualtBoardSize
TicTacToe::Game.new(board_size).run
